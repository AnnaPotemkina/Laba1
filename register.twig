{% extends 'parts/base.twig' %}

{% block body %}
    <h1>Register page</h1>

    {% if message is not null %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endif %}
    <form method="post" action="/register-post/">
        <div class="form-group">
            <label for="company_name">Company name</label>
            <input type="text" name="company_name" class="form-control" id="company_name" value="{{ form ? form.company_name}}"/>
        </div>
        <div class="form-group">
            <label for="phone_number" class="form-label">Мобильный телефон</label>
            <input type="text" name="phone_number" class="form-control" id="phone_number" aria-describedby="phoneHelp" value="{{ form ? form.phone_number }}" required>
            <small id="phoneHelp" class="form-text text-muted">Формат: 89997776655</small>
        </div>
        <select class="form-select mb-3" name="type_name" aria-label="type_name">
            {% for type in types %}
                <option value="{{ type.type_name }}">{{ type.type_name }}</option>
            {% endfor %}
        </select>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" class="form-control" id="email" area-describedby="emailHelp" value="{{ form ? form.email }}"/>
            <small id="emailHelp" class="form-text text-muted">Ваши личные данные будут защищены</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password" value=""/>
        </div>
        <div class="form-group mb-3">
            <label for="confirm_password">Confirm password</label>
            <input type="password" name="confirm_password" class="form-control" id="confirm_password" value=""/>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
{% endblock %}
